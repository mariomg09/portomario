generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Experience {
  id        Int       @id @default(autoincrement())
  title     String
  positions Position[]
  image     String
  tag       String
  previewUrl String
}

model Position {
  id          Int      @id @default(autoincrement())
  description String
  time        String
  experience  Experience @relation(fields: [experienceId], references: [id])
  experienceId Int
}



